{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "scripts/**/*.js",
      "public/**/*.js",
      "cypress/**/*.js",
      "cypress/**/*.ts",
      "build/**/*.js",
      "test/*.js",
      "*.js"
    ]
  },
  "rules": {
    "no-any": {
      "severity": "warning"
    },
    "ban": {
      "severity": "warning",
      "options": [
        {
          "name": ["has"],
          "message": "Prefer native JavaScript existence checking"
        },
        {
          "name": ["get"],
          "message": "Prefer native JavaScript property accessing"
        },
        {
          "name": ["assignIn"],
          "message": "Avoid mutation, try classic object assigning"
        }
      ]
    },
    "triple-equals": [true],
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "no-var-requires": false,
    "quotemark": [
      false
    ],
    "semicolon": [
      false
    ],
    "only-arrow-functions": false,
    "space-before-function-paren": [
      false
    ],
    "indent": [
      false
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": true,
    "interface-name": false,
    "jsx-no-bind": [
      false
    ],
    "no-namespace": [
      false
    ],
    "no-empty-interface": [
      false
    ],
    "jsx-boolean-value": [
      false
    ],
    "array-type": [
      true,
      "generic"
    ],
    "jsx-no-lambda": [
      false
    ]
  }
}
